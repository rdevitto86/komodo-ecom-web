{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": "./",
    "checkJs": true,
    "declaration": true,
    "downlevelIteration": true,                         /* TODO - any benefit? */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,           /* TODO - any benefit? */
    "importHelpers": true,                              /* TODO - any benefit? */
    "incremental": true,                                /* TODO - any benefit? */
    "isolatedModules": true,
    "jsx": "react",                                     /* TODO - check which format works best for client + server */
    "lib": [                                            /* TODO - check which format works best for client + server */
      "DOM",
      "ES2020"
    ],
    "module": "ES2020",                                 /* TODO - check which format works best for client + server */
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "removeComments": true,
    "resolveJsonModule": true,            
    "sourceMap": true,                                  /* TODO - any benefit? */                            
    "target": "ES2020"                                  /* TODO - check which format works best for client + server */
  },
  "include": [
    "src",
    "node_modules/@types"
  ]
}